# Distributed Cache Configuration
# ===========================================

# Redis Configuration for Distributed SSO Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_SSO_DB=1
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100

# Cache TTL Settings (in seconds)
CACHE_TTL_USER_AUTH=900          # 15 minutes
CACHE_TTL_USER_PERMISSIONS=600   # 10 minutes  
CACHE_TTL_USER_ROLES=1800        # 30 minutes
CACHE_TTL_SUBSCRIPTION=3600      # 1 hour
CACHE_TTL_FEATURES=1800          # 30 minutes
CACHE_TTL_APP_ACCESS=900         # 15 minutes
CACHE_TTL_SESSION=1800           # 30 minutes

# Cache Performance Settings
CACHE_DEFAULT_TTL=600            # 10 minutes default
CACHE_MAX_CONNECTIONS=10
CACHE_CONNECTION_TIMEOUT=5000    # 5 seconds
CACHE_COMMAND_TIMEOUT=3000       # 3 seconds

# Cache Health Thresholds
CACHE_MIN_HIT_RATE=70           # Minimum hit rate % for healthy status
CACHE_MAX_ERROR_RATE=5          # Maximum error rate % for healthy status
CACHE_MAX_RESPONSE_TIME=100     # Maximum avg response time (ms) for healthy status

# Cache Invalidation Settings
CACHE_INVALIDATION_ENABLED=true
CACHE_BATCH_INVALIDATION=true
CACHE_ASYNC_INVALIDATION=true

# Performance Monitoring
CACHE_METRICS_ENABLED=true
CACHE_METRICS_RETENTION_HOURS=24
CACHE_HEALTH_CHECK_INTERVAL=30  # seconds

# Fallback Configuration
CACHE_FALLBACK_ENABLED=true
CACHE_CIRCUIT_BREAKER_ENABLED=true
CACHE_CIRCUIT_BREAKER_THRESHOLD=10      # failures before opening circuit
CACHE_CIRCUIT_BREAKER_TIMEOUT=60000     # ms before trying again

# Development/Debug Settings
CACHE_DEBUG_LOGGING=false
CACHE_PERFORMANCE_LOGGING=true
CACHE_OPERATION_LOGGING=false

# Application Identification
APP_CODE=wrapper
INTERNAL_API_KEY=your_internal_api_key_here

# Distributed Cache Cluster (if using Redis Cluster)
REDIS_CLUSTER_ENABLED=false
REDIS_CLUSTER_NODES=localhost:7000,localhost:7001,localhost:7002

# Cache Warming Settings
CACHE_WARMING_ENABLED=true
CACHE_WARMING_ON_STARTUP=false
CACHE_PRELOAD_POPULAR_USERS=true

# Security Settings
CACHE_ENCRYPTION_ENABLED=false
CACHE_ENCRYPTION_KEY=your_encryption_key_here
CACHE_SSL_ENABLED=false 