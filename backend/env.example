# Database
DATABASE_URL=postgresql://username:password@localhost:5432/wrapper_db
DB_POOL_SIZE=20

# Server Configuration
PORT=3000
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Kinde Authentication
KINDE_DOMAIN=https://your-domain.kinde.com
KINDE_CLIENT_ID=your-kinde-client-id
KINDE_CLIENT_SECRET=your-kinde-client-secret
KINDE_M2M_CLIENT_ID=your-kinde-m2m-client-id
KINDE_M2M_CLIENT_SECRET=your-kinde-m2m-client-secret
KINDE_REDIRECT_URI=http://localhost:3000/auth/callback
KINDE_LOGOUT_REDIRECT_URI=http://localhost:3000/auth/logout

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs for Plans
STRIPE_STARTER_MONTHLY_PRICE_ID=price_starter_monthly
STRIPE_STARTER_YEARLY_PRICE_ID=price_starter_yearly
STRIPE_PROFESSIONAL_MONTHLY_PRICE_ID=price_professional_monthly
STRIPE_PROFESSIONAL_YEARLY_PRICE_ID=price_professional_yearly
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_enterprise_monthly
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_enterprise_yearly

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Brevo Email Service (Primary)
BREVO_API_KEY= your-brevo-api-key
BREVO_SENDER_EMAIL= noreply@yourcompany.com
BREVO_SENDER_NAME=Your Company Name

# SMTP Email Service (Alternative/Fallback)
# Use these if you prefer SMTP over Brevo or want a fallback
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM_EMAIL=noreply@yourcompany.com
# SMTP_FROM_NAME=Your Company Name
# SMTP_TLS_REJECT_UNAUTHORIZED=false

# Application URLs
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:3000

# Tool URLs (for proxying)
CRM_APP_URL=http://localhost:3002
HR_APP_URL=http://localhost:3003
AFFILIATE_APP_URL=http://localhost:3004
ACCOUNTING_APP_URL=http://localhost:3005
INVENTORY_APP_URL=http://localhost:3006

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# File Upload
MAX_FILE_SIZE=50000000
UPLOAD_DIR=./uploads

# Monitoring
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true 