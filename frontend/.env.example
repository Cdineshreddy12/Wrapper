# ============================================================================
# WrapperStandalone Frontend — Environment Variables
# Copy this file to .env and fill in the values for your environment.
# All variables must be prefixed with VITE_ to be exposed to the client.
# ============================================================================

# ── API ──────────────────────────────────────────────────────────────────────
VITE_API_URL=http://localhost:3000/api
VITE_API_BASE_URL=http://localhost:3000

# ── Kinde Auth ───────────────────────────────────────────────────────────────
VITE_KINDE_DOMAIN=https://your-app.kinde.com
VITE_KINDE_CLIENT_ID=your_client_id
VITE_KINDE_REDIRECT_URI=http://localhost:3001/auth/callback
VITE_KINDE_LOGOUT_URI=http://localhost:3001
VITE_KINDE_GOOGLE_CONNECTION_ID=
VITE_KINDE_MANAGEMENT_AUDIENCE=
VITE_KINDE_MANAGEMENT_SCOPES=

# ── App Domains ──────────────────────────────────────────────────────────────
VITE_WRAPPER_DOMAIN=http://localhost:3001
VITE_CRM_DOMAIN=http://localhost:3002
VITE_CRM_CALLBACK_PATH=/callback
VITE_HR_APP_URL=http://localhost:3003
VITE_AFFILIATE_APP_URL=http://localhost:3004

# ── Assets ───────────────────────────────────────────────────────────────────
# Leave blank to use defaults (Cloudinary-hosted Zopkit logos)
VITE_LOGO_URL=
VITE_FULL_LOGO_URL=

# ── Secrets (client-side — avoid putting real secrets here) ──────────────────
VITE_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ── AI ───────────────────────────────────────────────────────────────────────
VITE_GEMINI_API_KEY=

# ── Environment ──────────────────────────────────────────────────────────────
VITE_ENV=development
